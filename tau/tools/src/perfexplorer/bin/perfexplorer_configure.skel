# cat ${targetdir}/etc/java.policy | 
# sed -e 's,@TMPDIR@,'$tmpdir',' \
# -e 's,@CONFIGDIR@,'$configdir',' \
# -e 's,@CONFIGDIR2@,'$configdir',' \
# -e 's,@TAULIBDIR@,'$LIBDIR',' \
# -e 's,@TAULIBDIR2@,'$LIBDIR',' \
